{
  "extends": [
    "config:base"
  ],
  "pinDigests": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "prHourlyLimit": 0,
  "labels": [
    "renovate-bot"
  ],
  "automerge": true,
  "automergeType": "pr",
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/lint.yml$"
      ],
      "matchStrings": [
        "^\\s+version: (?<currentValue>[^\\s]+?)$"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^k8s.io/client-go$"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ]
}
