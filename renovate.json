{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "pinDigests": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "prHourlyLimit": 0,
  "labels": [
    "renovate-bot"
  ],
  "automerge": true,
  "automergeType": "pr",
  "regexManagers": [
    {
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        "(?<depName>docker\\.io\\/golangci\\/golangci-lint):(?<currentValue>[A-Za-z0-9_][A-Za-z0-9_.-]{0,127})(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        ".*"
      ],
      "matchStrings": [
        "version:\\s+(?<currentValue>[^\\s]+)\\s+# renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^k8s.io/client-go$"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ]
}