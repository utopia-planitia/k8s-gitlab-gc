{
  "extends": [
    "config:base"
  ],
  "pinDigests": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "prHourlyLimit": 0,
  "labels": [
    "renovate-bot"
  ],
  "automerge": true,
  "automergeType": "pr",
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/lint.yml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags"
    }
  ]
}
